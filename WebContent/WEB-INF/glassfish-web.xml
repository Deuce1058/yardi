<glassfish-web-app>
    <context-root>/yardiWeb</context-root>
    <session-config>
        <session-properties>
            <property name="enableCookies" value="true"/> 
        </session-properties>
        <cookie-properties>
            <property name="cookieSecure" value="dynamic"/>
